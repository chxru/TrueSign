# Run the container with `docker run -p 3000:3000 -t services-storage`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system services-storage && \
          adduser --system -G services-storage services-storage

COPY dist/apps/services/storage services-storage
RUN chown -R services-storage:services-storage .

CMD [ "node", "services-storage" ]
